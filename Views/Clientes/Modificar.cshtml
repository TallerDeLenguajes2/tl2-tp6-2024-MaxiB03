@model models.Cliente

@{
    ViewData["Title"] = "Modificar cliente";
}

<h1 class="border-bottom">@ViewData["Title"]</h1>

<form asp-controller="Clientes" asp-action="ModificarCliente" method="post" asp-route-id="@Model.IdCliente" class="w-75 mx-auto p-4 my-4">
    <input type="hidden" asp-for="@Model.IdCliente">

    <section class="from-group mb-2">
        <label asp-for="Nombre">Nombre completo:</label>
        <input asp-for="Nombre" class="form-control" value="@Model.Nombre">
    </section>
    <section class="form-group mb-2">
        <label asp-for="Email">Correo electrónico:</label>
        <input asp-for="Email" class="form-control" value="@Model.Email">
    </section>
    <section class="form-group mb-4">
        <label asp-for="Telefono">Teléfono de contacto:</label>
        <input asp-for="Telefono" class="form-control" value="@Model.Telefono">
    </section>  
    <section class="d-flex justify-content-center align-items-center my-2 gap-3">
        <input type="submit" value="Actualizar" class="btn btn-primary">
        <a asp-action="ListarClientes" class="btn btn-secondary">Cancelar</a>
    </section>
</form>